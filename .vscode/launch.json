{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "AMG",
            "type": "debugpy",
            "request": "launch",
            "stopOnEntry": false,
            "python": "${command:python.interpreterPath}",
            "program": "${workspaceRoot}/odoo-bin",
            "args": [
                "-c",
                "${workspaceFolder}/odoo.conf",
                
                "--dev=all",
                "-u",
                "crm_probability_cleaner",
               
                "-u",
                "crm",
                /**"-u",
                "market_intelligence",
                "-u",
                "leaflet_map",
                "--stop-after-init",
                "-u",
                "competitor",
                "--stop-after-init",
                "-u",
                "crm_lead_geolocation",
                "--stop-after-init",**/


            ],
            "cwd": "${workspaceRoot}",
            "env": {},
            "envFile": "${workspaceRoot}/.env",            
            "gevent": false,
            "console": "integratedTerminal",
            "justMyCode": false,
        }
    ]
}