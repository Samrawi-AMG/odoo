<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!--
            Security Groups for Coffee Management
        -->

        <!-- Main Roles -->
        <record id="group_coffee_user" model="res.groups">
            <field name="name">Coffee User</field>
            <field name="category_id" ref="base.module_category_manufacturing"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        </record>

        <record id="group_coffee_manager" model="res.groups">
            <field name="name">Coffee Manager</field>
            <field name="category_id" ref="base.module_category_manufacturing"/>
            <!-- Use a LOCAL reference because group_coffee_user is in the same file -->
            <field name="implied_ids" eval="[(4, ref('group_coffee_user'))]"/>
        </record>

    </data>
</odoo>