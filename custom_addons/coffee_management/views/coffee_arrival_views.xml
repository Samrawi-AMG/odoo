<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="coffee_arrival_view_tree" model="ir.ui.view">
            <field name="name">coffee.arrival.tree</field>
            <field name="model">coffee.arrival</field>
            <field name="arch" type="xml">
                <tree string="Coffee Arrivals">
                    <field name="date"/>
                    <field name="coffee_issue_no"/>
                    <field name="vehicle_plate_no"/>
                    <field name="supplier_id"/>
                    <field name="product_id"/>
                    <field name="ecx_coffee_name_id"/>
                    <field name="woreda_id"/>
                    <field name="zone_id"/>
                    <field name="state" widget="badge"
                           decoration-success="state in ('quality_evaluated', 'weight_recorded', 'done')"
                           decoration-danger="state == 'ug_grade'"
                           decoration-warning="state == 'draft'"/>
                </tree>
            </field>
        </record>

        <record id="coffee_arrival_view_form" model="ir.ui.view">
            <field name="name">coffee.arrival.form</field>
            <field name="model">coffee.arrival</field>
            <field name="arch" type="xml">
                <form string="Coffee Arrival">
                    <header>
                        <button name="action_evaluate_quality" string="Evaluate Quality" type="object"
                                class="oe_highlight" invisible="state in ('ug_grade', 'done')"/>
                        <button name="action_record_weight" string="Record Weight" type="object"
                                class="oe_highlight" invisible="state in ('draft', 'ug_grade', 'done')"/>
                        <field name="state" widget="statusbar"
                               statusbar_visible="draft,quality_evaluated,weight_recorded,done"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="coffee_issue_no" readonly="1"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="date"/>
                                <field name="supplier_id"/>
                                <field name="ecx_coffee_name_id"/>
                                <field name="product_id" readonly="1"/>
                                <!--<field name="coffee_grade_id" readonly="1"/>-->
                            </group>
                            <group>
                                <field name="vehicle_plate_no"/>
                                <field name="coffee_type_ids"/>
                                <field name="coffee_origin_ids"/>
                                <field name="amg_grade" readonly="1"/>
                            </group>
                            <group string="Location Details">

                                <field name="woreda_id"/>
                                <field name="zone_id"/>

                            </group>
                        </group>
                        <notebook>
                            <page string="Quality Evaluation">
                                <field name="quality_evaluation_id" readonly="1"/>
                                <button name="action_evaluate_quality" string="Open Quality Evaluation" type="object"
                                        invisible="state in ('ug_grade', 'done')"/>
                            </page>
                            <page string="Weight History">
                                <field name="weight_history_id" readonly="1"/>
                                <button name="action_record_weight" string="Open Weight History" type="object"
                                        invisible="state in ('draft', 'ug_grade', 'done')"/>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="coffee_arrival_view_search" model="ir.ui.view">
            <field name="name">coffee.arrival.view.search</field>
            <field name="model">coffee.arrival</field>
            <field name="arch" type="xml">
                <search string="Search Coffee Arrivals">
                    <field name="coffee_issue_no" string="Issue No."
                           filter_domain="[('coffee_issue_no', 'ilike', self)]"/>
                    <field name="vehicle_plate_no" string="Vehicle Plate No."
                           filter_domain="[('vehicle_plate_no', 'ilike', self)]"/>
                    <field name="supplier_id" string="Supplier"/>
                    <field name="product_id" string="Product"/>
                    <field name="ecx_coffee_name_id" string="ECX Product"/>
                    <field name="woreda_id" string="Woreda"/>
                    <field name="state" string="Status"/>

                    <separator/>

                    <filter string="My Arrivals" name="my_arrivals" domain="[('create_uid', '=', uid)]"/>

                    <separator/>

                    <filter string="Draft" name="state_draft"
                            domain="[('state', '=', 'draft')]"/>
                    <filter string="Quality Evaluated" name="state_quality_evaluated"
                            domain="[('state', '=', 'quality_evaluated')]"/>
                    <filter string="Weight Recorded" name="state_weight_recorded"
                            domain="[('state', '=', 'weight_recorded')]"/>
                    <filter string="Done" name="state_done"
                            domain="[('state', '=', 'done')]"/>
                    <filter string="Rejected (UG)" name="state_ug_grade"
                            domain="[('state', '=', 'ug_grade')]"/>


                    <separator/>

                    <filter string="Today" name="today_arrivals"
                            domain="[('date', '=', context_today())]"/>
                    <filter string="This Week" name="this_week_arrivals"
                            domain="[('date', '&gt;=', (context_today() - relativedelta(weeks=1)))]"/>
                    <filter string="Arrival Date" name="filter_arrival_date" date="date"/>

                    <separator/>

                    <group expand="1" string="Group By">
                        <filter string="Supplier" name="supplier_groupby"
                                context="{'group_by': 'supplier_id'}"/>
                        <filter string="Date" name="date_groupby"
                                context="{'group_by': 'date:month'}"/>
                        <filter string="AMG Grade" name="amg_grade_groupby"
                                context="{'group_by': 'amg_grade'}"/>
                        <filter string="Woreda" name="woreda_groupby"
                                context="{'group_by': 'woreda_id'}"/>
                        <filter string="Status" name="state_groupby"
                                context="{'group_by': 'state'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="coffee_arrival_action" model="ir.actions.act_window">
            <field name="name">Coffee Arrivals</field>
            <field name="res_model">coffee.arrival</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a new coffee arrival record.
                </p>
            </field>
        </record>
    </data>
</odoo>