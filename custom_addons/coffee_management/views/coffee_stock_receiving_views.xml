<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="coffee_stock_receiving_view_tree" model="ir.ui.view">
        <field name="name">coffee.stock.receiving.tree</field>
        <field name="model">coffee.stock.receiving</field>
        <field name="arch" type="xml">
            <tree string="Stock Receiving">
                <field name="grn"/>
                <field name="arrival_id"/>
                <field name="warehouse_id"/>
                <field name="location_id"/>
                <field name="product_id"/>
                <field name="received_bags"/>
                <field name="received_kg"/>
                <field name="current_stock_balance_kg"/>
                <field name="state" widget="badge"
                       decoration-success="state == 'done'"
                       decoration-danger="state == 'cancelled'"
                       decoration-warning="state == 'draft'"/>
            </tree>
        </field>
    </record>

    <record id="coffee_stock_receiving_view_form" model="ir.ui.view">
        <field name="name">coffee.stock.receiving.form</field>
        <field name="model">coffee.stock.receiving</field>
        <field name="arch" type="xml">
            <form string="Stock Receiving">
                <header>
                    <button name="action_receive_stock" string="Receive Stock" type="object" class="oe_highlight"
                            invisible="state != 'draft'" groups="base.group_system"/>
                    <!-- START OF NEW CODE: Add the button to create a Manufacturing Order -->
                    <!-- <button name="action_create_manufacturing_order" string="Create Manufacturing Order" type="object" class="oe_highlight" invisible="state != 'done'" groups="base.group_system"/>
                     END OF NEW CODE -->
                    <field name="state" widget="statusbar" statusbar_visible="draft,done"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="grn" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="arrival_id"/>
                            <field name="warehouse_id"/>
                            <field name="location_id"/>
                            <field name="product_id"/>
                        </group>
                        <group>
                            <field name="received_bags"/>
                            <field name="received_kg"/>
                        </group>
                    </group>
                    <group string="Current Stock Balances (Calculated)">
                        <group>
                            <field name="beginning_balance_bags" readonly="1"/>
                            <field name="beginning_balance_kg" readonly="1"/>
                        </group>
                        <group>
                            <field name="issued_bags" readonly="1"/>
                            <field name="issued_kg" readonly="1"/>
                            <field name="current_stock_balance_bags" readonly="1"/>
                            <field name="current_stock_balance_kg" readonly="1"/>
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

