<!-- document_page/views/document_page_views.xml -->
<odoo>
    <!--
    MODIFIED: View IDs have been renamed to 'view_wiki_tree', 'view_wiki_form',
    and 'view_wiki_filter' to satisfy the requirements of the 'mgmtsystem_manual' module.
    -->

    <!-- ADDED: The search view that mgmtsystem_manual is looking for -->
    <record id="view_wiki_filter" model="ir.ui.view">
        <field name="name">document.page.filter</field>
        <field name="model">document.page</field>
        <field name="arch" type="xml">
            <search string="Search Pages">
                <field name="name" string="Page"/>
                <field name="category_id"/>
            </search>
        </field>
    </record>

    <!-- Tree View for Document Page (ID RENAMED) -->
    <record id="view_wiki_tree" model="ir.ui.view">
        <field name="name">document.page.tree</field>
        <field name="model">document.page</field>
        <field name="arch" type="xml">
            <tree string="Document Pages">
                <field name="name"/>
                <field name="category_id"/>
                <field name="type"/>
            </tree>
        </field>
    </record>

    <!-- Form View for Document Page (ID RENAMED for consistency) -->
    <record id="view_wiki_form" model="ir.ui.view">
        <field name="name">document.page.form</field>
        <field name="model">document.page</field>
        <field name="arch" type="xml">
            <form string="Document Page">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="e.g. Quality Policy"/>
                        </h1>
                    </div>
                    <group>
                        <field name="category_id"/>
                        <!-- ADDED: Make the parent_id field visible on the form -->
                        <field name="parent_id"/>
                        <field name="type"/>
                    </group>
                    <notebook>
                        <page string="Content">
                            <field name="template"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- This action and menus can remain the same, they will now use the renamed views -->
    <record id="action_document_page" model="ir.actions.act_window">
        <field name="name">Document Pages</field>
        <field name="res_model">document.page</field>
        <field name="view_mode">tree,form</field>
        <!-- Odoo will automatically find the search view 'view_wiki_filter' by default -->
    </record>

    <!-- Menu Items -->
    <menuitem
        id="menu_documentation_root"
        name="Documentation"
        sequence="10"
        web_icon="document_page,static/description/icon.png"/>

    <menuitem
        id="menu_document_page"
        name="Pages"
        parent="menu_documentation_root"
        action="action_document_page"
        sequence="10"/>

    <menuitem
        id="menu_documentation_configuration"
        name="Configuration"
        parent="menu_documentation_root"
        sequence="100"/>
</odoo>
